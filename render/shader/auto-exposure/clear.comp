// Clears the exposure histogram buffer.

#version 460

layout(local_size_x = 16, local_size_y = 16, local_size_z = 1) in;

layout(std430, set = 1, binding = 0) writeonly buffer Dst
{
    uint bins[256];
    uint weight_sum;
};

void main()
{
    if (gl_LocalInvocationIndex == 0)
        weight_sum = 0;

    bins[gl_LocalInvocationIndex] = 0;
}
